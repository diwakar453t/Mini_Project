# Environment Configuration
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://chargemitra:chargemitra123@db:5432/chargemitra
REDIS_URL=redis://redis:6379/0

# Backend URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_HASH_ALGORITHM=bcrypt

# Payment Configuration - Razorpay (Primary for India)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Payment Configuration - Stripe (International Fallback)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Platform Commission (percentage)
PLATFORM_COMMISSION_RATE=15.0

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_GEOCODING_API_KEY=your_google_geocoding_api_key

# Email Configuration - SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@chargemitra.com
SENDGRID_FROM_NAME=ChargeMitra

# SMS Configuration - Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage - Local Development
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,pdf

# File Storage - AWS S3 (Production)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=chargemitra-uploads
AWS_REGION=ap-south-1
AWS_S3_ENDPOINT_URL=https://s3.ap-south-1.amazonaws.com

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@chargemitra.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring - Sentry
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Security
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true
SECURE_COOKIES=false  # Set to true in production with HTTPS

# Session Configuration
SESSION_EXPIRE_SECONDS=3600

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Booking Configuration
BOOKING_BUFFER_MINUTES=15  # Minimum time between bookings
MAX_BOOKING_DURATION_HOURS=24
BOOKING_CANCELLATION_WINDOW_HOURS=2

# Host Settings
HOST_AUTO_ACCEPT_DEFAULT=false
HOST_KYC_REQUIRED=true

# WebSocket Configuration
WS_CONNECTION_TIMEOUT=300  # seconds

# Telemetry Simulation
TELEMETRY_UPDATE_INTERVAL=5  # seconds
SIMULATE_TELEMETRY=true

# Admin Settings
ADMIN_EMAIL=admin@chargemitra.com
ADMIN_PASSWORD=admin123  # Change in production

# Development Test Accounts
TEST_HOST_EMAIL=host@example.com
TEST_HOST_PASSWORD=host123
TEST_RENTER_EMAIL=renter@example.com
TEST_RENTER_PASSWORD=renter123

# Payout Configuration
PAYOUT_MINIMUM_AMOUNT=500  # INR
PAYOUT_PROCESSING_DAYS=7

# Dispute Settings
DISPUTE_AUTO_RESOLVE_DAYS=30

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# Dummy Payments (Development only - DO NOT ENABLE IN PRODUCTION)
USE_DUMMY_PAYMENTS=true