# Environment Configuration
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://chargemitra:chargemitra123@db:5432/chargemitra
REDIS_URL=redis://redis:6379/0

# Backend URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# JWT Authentication
JWT_SECRET_KEY=dev-secret-key-change-in-production-12345
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_HASH_ALGORITHM=bcrypt

# Payment Configuration - Development Mode
USE_DUMMY_PAYMENTS=true
RAZORPAY_KEY_ID=rzp_test_dummy_key_id
RAZORPAY_KEY_SECRET=dummy_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=dummy_webhook_secret

# Platform Commission (percentage)
PLATFORM_COMMISSION_RATE=15.0

# Google Maps API (Leave empty for now - you can add later)
GOOGLE_MAPS_API_KEY=
GOOGLE_GEOCODING_API_KEY=

# Email Configuration (Optional for development)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@chargemitra.com
SENDGRID_FROM_NAME=ChargeMitra

# File Storage - Local Development
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,pdf

# Security
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true
SECURE_COOKIES=false

# Session Configuration
SESSION_EXPIRE_SECONDS=3600

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Booking Configuration
BOOKING_BUFFER_MINUTES=15
MAX_BOOKING_DURATION_HOURS=24
BOOKING_CANCELLATION_WINDOW_HOURS=2

# WebSocket Configuration
WS_CONNECTION_TIMEOUT=300

# Telemetry Simulation
TELEMETRY_UPDATE_INTERVAL=5
SIMULATE_TELEMETRY=true

# Admin Settings
ADMIN_EMAIL=admin@chargemitra.com
ADMIN_PASSWORD=admin123

# Development Test Accounts
TEST_HOST_EMAIL=host@example.com
